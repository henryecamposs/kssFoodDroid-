<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kss.kssconsumirws_rest.kss_dbf.ItemMenuDetalle">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Detalle de ITEM"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="DescripcÃ³n:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lblResult_Descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblDescr"
        android:layout_alignBottom="@+id/lblDescr"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/lblDescr"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Precio"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/lblDescr"
        android:layout_alignLeft="@+id/lblDescr"
        android:layout_alignStart="@+id/lblDescr" />

    <TextView
        android:id="@+id/lblResult_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignRight="@+id/lblResult_Descr"
        android:layout_alignEnd="@+id/lblResult_Descr"
        android:layout_toEndOf="@+id/lblResult_Descr"
        android:layout_alignTop="@+id/lblPrecio"
        android:layout_toRightOf="@+id/lblResult_Descr" />


</RelativeLayout>
