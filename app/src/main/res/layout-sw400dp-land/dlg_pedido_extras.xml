<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_LightSteelBlue"
    android:minWidth="700dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:touchscreenBlocksFocus="true"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/color_Smoke"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblProducto_pedidoExtra"
            style="@style/Kss_TextAparence.Titulo_Azul"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="05-refresco colita"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="340dp"
        android:layout_gravity="top"
        android:layout_margin="2dp"
        android:background="@color/color_Smoke"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal">

                    <RadioButton
                        android:id="@+id/radioButton"
                        style="@style/kss_widget.OptionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:checked="true"
                        android:text="@string/kssPedidoExtra_Con"
                        android:textSize="17dp"
                        android:padding="7dp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        style="@style/kss_widget.OptionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/kssPedidoExtra_Sin"
                        android:textSize="17dp"
                        android:padding="7dp" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        style="@style/kss_widget.OptionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/kssPedidoExtra_Poco"
                        android:textSize="17dp"
                        android:padding="7dp" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        style="@style/kss_widget.OptionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/kssPedidoExtra_Doble"
                        android:textSize="17dp"
                        android:padding="7dp" />
                </RadioGroup>
            </LinearLayout>

            <GridView
                android:id="@+id/grdvExtras_PedidoExtra"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@color/color_Blanco"
                android:choiceMode="singleChoice"
                android:columnWidth="50dp"
                android:gravity="center_horizontal|top"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:padding="2dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/color_SteelBlue"
            android:choiceMode="singleChoice"
            android:dividerHeight="1dp"
            android:stackFromBottom="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_Smoke"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            style="@style/kss_widget.FrameRedondo"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/kssPedidoListItem_BottomMenu_Height"
                android:layout_gravity="right"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnBuscar_PedidoExtra"
                    android:layout_width="@dimen/kssPedido_ItemsMenu_btnBottom_Width"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="5dp"
                    android:layout_row="0"
                    android:width="@dimen/kss_btnAmbientes_Width"
                    android:background="@drawable/btn_azul_u"
                    android:drawableTop="@drawable/btn_buscar"
                    android:tag="6"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnMsjPerson_PedidoExtra"
                    android:layout_width="@dimen/kssPedido_ItemsMenu_btnBottom_Width"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="5dp"
                    android:layout_row="0"
                    android:width="@dimen/kss_btnAmbientes_Width"
                    android:background="@drawable/btn_azul_u"
                    android:drawableTop="@drawable/btn_comanda"
                    android:tag="6"
                    android:textAllCaps="false" />

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtnOK_pedidoExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_ok_v" />

        <ImageButton
            android:id="@+id/imgbtnCancel_pedidoExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_cancel_r" />

    </LinearLayout>

</LinearLayout>
