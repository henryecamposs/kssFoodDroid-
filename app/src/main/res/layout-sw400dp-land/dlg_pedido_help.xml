

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_SteelBlue">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_Smoke">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/tbr1"
                android:gravity="center_vertical"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="@dimen/kssbtnHelp_width"
                    android:layout_height="@dimen/kssbtnHelp_Height"
                    android:id="@+id/imageButton"
                    android:src="@drawable/btn_circ_plusa"
                    android:background="@drawable/btn_azul_d"
                    android:layout_gravity="left|center_vertical"
                    android:layout_column="0"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ksspedidoHepCantidad"
                    android:id="@+id/lblCantidad_pedidoHelp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    style="@style/Kss_TextAparence.txtInput_Azul"
                    android:lines="2"
                    android:textStyle="normal|italic"
                    android:textSize="17sp"
                    android:textColor="@color/color_Negro"
                    android:typeface="serif"
                    android:singleLine="false"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/tableRow1"
                android:gravity="center_vertical"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="@dimen/kssbtnHelp_width"
                    android:layout_height="@dimen/kssbtnHelp_Height"
                    android:id="@+id/imageButton4"
                    android:src="@drawable/btn_circ_minusa"
                    android:background="@drawable/btn_azul_d"
                    android:layout_gravity="left|center_vertical"
                    android:layout_column="0"
                    android:scaleType="fitCenter" />

                <TextView
                    style="@style/Kss_TextAparence.Titulo_Azul"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ksspedidoHelpEliminarItems"
                    android:id="@+id/textView10"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_Negro"
                    android:textStyle="normal|italic"
                    android:typeface="serif"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/tableRow2"
                android:gravity="center_vertical"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="@dimen/kssbtnHelp_width"
                    android:layout_height="@dimen/kssbtnHelp_Height"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/btn_plus_a"
                    android:background="@drawable/btn_azul_d"
                    android:layout_gravity="left|center_vertical"
                    android:layout_column="0"
                    android:scaleType="fitCenter" />

                <TextView
                    style="@style/Kss_TextAparence.Titulo_Azul"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ksspedidoHelpExtra"
                    android:id="@+id/textView7"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_Negro"
                    android:textStyle="normal|italic"
                    android:typeface="serif"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/tableRow3"
                android:gravity="center_vertical"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="@dimen/kssbtnHelp_width"
                    android:layout_height="@dimen/kssbtnHelp_Height"
                    android:id="@+id/imageButton3"
                    android:src="@drawable/btn_circ_first"
                    android:background="@drawable/btn_azul_d"
                    android:layout_gravity="left|center_vertical"
                    android:layout_column="0"
                    android:scaleType="fitCenter" />

                <TextView
                    style="@style/Kss_TextAparence.Titulo_Azul"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ksspedidoHelpMuestraGrupoMenu"
                    android:id="@+id/textView9"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_Negro"
                    android:textStyle="normal|italic"
                    android:typeface="serif"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/tableRow4"
                android:gravity="center_vertical"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="@dimen/kssbtnHelp_width"
                    android:layout_height="@dimen/kssbtnHelp_Height"
                    android:id="@+id/imageButton4"
                    android:src="@drawable/btn_buscar"
                    android:background="@drawable/btn_azul_d"
                    android:layout_gravity="left|center_vertical"
                    android:layout_column="0"
                    android:scaleType="fitCenter" />

                <TextView
                    style="@style/Kss_TextAparence.Titulo_Azul"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ksspedidoHelpBuscarItem"
                    android:id="@+id/textView10"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_Negro"
                    android:textStyle="normal|italic"
                    android:typeface="serif"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/tableRow5"
                android:gravity="center_vertical"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="@dimen/kssbtnHelp_width"
                    android:layout_height="@dimen/kssbtnHelp_Height"
                    android:id="@+id/imageButton6"
                    android:src="@drawable/btn_cliente"
                    android:background="@drawable/btn_azul_d"
                    android:layout_gravity="left|center_vertical"
                    android:layout_column="0"
                    android:scaleType="fitCenter" />

                <TextView
                    style="@style/Kss_TextAparence.Titulo_Azul"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ksspedidoHelpBuscarCliente"
                    android:id="@+id/textView24"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_Negro"
                    android:textStyle="normal|italic"
                    android:typeface="serif"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/tableRow6"
                android:gravity="center_vertical"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="@dimen/kssbtnHelp_width"
                    android:layout_height="@dimen/kssbtnHelp_Height"
                    android:id="@+id/imageButton4"
                    android:src="@drawable/btn_mesa_in"
                    android:background="@drawable/btn_azul_d"
                    android:layout_gravity="left|center_vertical"
                    android:layout_column="0"
                    android:scaleType="fitCenter" />

                <TextView
                    style="@style/Kss_TextAparence.Titulo_Azul"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ksspedidoHelpBackPantalla"
                    android:id="@+id/textView10"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_Negro"
                    android:textStyle="normal|italic"
                    android:typeface="serif"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtnCancel_pedidoHelp"
                android:background="@drawable/btn_cancel_r"
                android:adjustViewBounds="true"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

    </LinearLayout>

