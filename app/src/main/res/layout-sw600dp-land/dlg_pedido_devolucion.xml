<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_LightSteelBlue"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_Smoke"
        android:gravity="center"
        android:layout_margin="2dp"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/Kss_TextAparence.Titulo_Azul"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="05-refresco colita"
            android:id="@+id/lblProducto_devol"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/color_Smoke"
        android:padding="5dp"
        style="@style/Kss_TextAparence.Titulo_Negro">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kssEliminarItemPedido"
                android:id="@+id/rdEliminarItem"
                android:textSize="30sp"
                android:enabled="true"
                android:checked="true"
                android:layout_marginTop="5dp"
                android:focusable="true"
                style="@style/Kss_TextAparence.Titulo_Negro" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kssEliminarTodos"
                android:id="@+id/rdEliminarTodos"
                android:enabled="true"
                android:checked="false"
                android:layout_marginTop="5dp"
                style="@style/Kss_TextAparence.Titulo_Negro" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kssReducirCantidad"
                android:id="@+id/rdReducirCantidad"
                android:textSize="30sp"
                android:checked="false"
                android:enabled="true"
                android:layout_marginTop="5dp"
                style="@style/Kss_TextAparence.Titulo_Negro" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numPickCanti_devol"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:touchscreenBlocksFocus="true"
                android:visibility="visible"
                style="@style/kss_widget.NumPicker" />


        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtnOK_devol"
            android:background="@drawable/btn_ok_v"
            android:adjustViewBounds="true"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtnCancel_devol"
            android:background="@drawable/btn_cancel_r"
            android:adjustViewBounds="true"
            android:layout_marginLeft="100dp" />

    </LinearLayout>

</LinearLayout>