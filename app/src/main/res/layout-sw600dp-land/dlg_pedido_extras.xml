
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@color/color_LightSteelBlue"
android:padding="0dp"
android:weightSum="1">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/color_Smoke"
    android:gravity="center"
    android:layout_margin="2dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="05-refresco colita"
        android:id="@+id/lblProducto_pedidoExtra"
        android:layout_gravity="center_vertical"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:paddingLeft="5dp"
        style="@style/Kss_TextAparence.Titulo_Azul"
        android:textSize="20sp" />
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="340dp"
    android:background="@color/color_Smoke"
    android:layout_gravity="top"
    android:layout_margin="2dp">

    <GridView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/grdvExtras_PedidoExtra"
        android:numColumns="4"
        android:background="@color/color_Blanco"
        android:padding="2dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:choiceMode="singleChoice"
        android:gravity="center_horizontal|top"
        android:horizontalSpacing="5dp"
        android:columnWidth="50dp"
        android:layout_weight="1.48"
        android:layout_gravity="left" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="12.46">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/linearLayout"
            android:layout_gravity="center"
            style="@style/kss_widget.FrameRedondo">

            <Button
                android:id="@+id/btnOpciones_PedidoExtra"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@drawable/btn_azul_u"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:tag="6"
                android:clickable="true"
                android:drawableBottom="@drawable/btn_circ_oka" />

        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/lstvItemsPedido_PedidoExtra"
            android:background="@color/color_Smoke"
            android:choiceMode="singleChoice"
            android:drawSelectorOnTop="false"
            android:headerDividersEnabled="false"
            android:padding="5dp"
            android:longClickable="true" />
    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_Smoke"
    android:gravity="center">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        style="@style/kss_widget.FrameRedondo"
        android:layout_margin="5dp"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kssPedidoListItem_BottomMenu_Height"
            android:gravity="center|top"
            android:weightSum="1"
            android:layout_gravity="right">

            <Button
                android:id="@+id/btnBuscar_PedidoExtra"
                android:layout_width="@dimen/kssPedido_ItemsMenu_btnBottom_Width"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:width="@dimen/kss_btnAmbientes_Width"
                android:background="@drawable/btn_azul_u"
                android:textAllCaps="false"
                android:tag="6"
                android:drawableTop="@drawable/btn_buscar"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical|right" />

            <Button
                android:id="@+id/btnMsjPerson_PedidoExtra"
                android:layout_width="@dimen/kssPedido_ItemsMenu_btnBottom_Width"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:width="@dimen/kss_btnAmbientes_Width"
                android:background="@drawable/btn_azul_u"
                android:textAllCaps="false"
                android:tag="6"
                android:drawableTop="@drawable/btn_comanda"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical|right" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtnAyuda_PedidoExtra"
            android:src="@drawable/btn_circ_help"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="5dp"
            android:background="@color/color_GrisClaro" />
    </FrameLayout>
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_marginTop="2dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnOK_pedidoExtra"
        android:background="@drawable/btn_ok_v"
        android:adjustViewBounds="true"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnCancel_pedidoExtra"
        android:background="@drawable/btn_cancel_r"
        android:adjustViewBounds="true"
        android:layout_marginLeft="100dp" />

</LinearLayout>

</LinearLayout>
