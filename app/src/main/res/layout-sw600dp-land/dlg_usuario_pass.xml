<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_SteelBlue"
    android:padding="15dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/color_Smoke"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/kssIndiquePassword"
            android:id="@+id/textView13"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="30sp"
            style="@style/Kss_TextAparence.Titulo_Negro"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number|textPassword"
            android:ems="10"
            android:id="@+id/txtPass_UserPass"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:hint="ContraseÃ±a"
            android:textSize="40sp"
            android:textColor="@color/color_Rojo" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtnOK_UserPass"
            android:background="@drawable/btn_ok_v"
            android:adjustViewBounds="true"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtnCancel_UserPass"
            android:background="@drawable/btn_cancel_r"
            android:adjustViewBounds="true"
            android:layout_marginLeft="100dp" />

    </LinearLayout>

</LinearLayout>