<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tutecentral.restfulapiclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tutecentral.restfulapiclient.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tutecentral.restfulapiclient.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.tutecentral.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tutecentral.restfulapicleint.MainActivity" />
        </activity>
        <activity
            android:name="com.tutecentral.restfulapiclient.DeptActivity"
            android:label="@string/title_activity_dept"
            android:parentActivityName="com.tutecentral.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tutecentral.restfulapicleint.MainActivity" />
        </activity>
        <activity
            android:name="com.tutecentral.restfulapiclient.UserDetailsActivity"
            android:label="@string/title_activity_user_details"
            android:parentActivityName="com.tutecentral.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tutecentral.restfulapicleint.MainActivity" />
        </activity>
        <activity
            android:name="com.tutecentral.restfulapiclient.CreateUserActivity"
            android:label="@string/title_activity_create_user"
            android:parentActivityName="com.tutecentral.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tutecentral.restfulapiclient.MainActivity" />
        </activity>
    </application>

</manifest>